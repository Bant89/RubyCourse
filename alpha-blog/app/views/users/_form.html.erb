<h2> The following errors prevented the user from getting created </h2>
<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |msg|%>
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username %><br/>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :email %><br />
        <%= f.email_field :email %>
    </p>
     <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.submit(@user.new_record? ? "Sign up" : "Update your account") %>
    </p>
<% end %>
<%= link_to "Back to Users listing", articles_path %>